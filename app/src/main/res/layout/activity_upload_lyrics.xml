<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateNotificationActivity">

    <EditText
        android:id="@+id/create_lyrics_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Lyrics Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/create_lyrics_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Lyrics Language"
        android:inputType="textImeMultiLine" />

    <EditText
        android:id="@+id/create_lyrics_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/uploadWeb_link"
        android:inputType="textUri" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/lyrics_upload_instruction"
        android:textColor="@color/red_A700" />
</LinearLayout>